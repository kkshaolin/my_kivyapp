<Appnote>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: #name
            canvas.before:
                Color:
                    rgb: 1, 0.843, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            size_hint: 1, 0.05  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}  # อยู่ตรงกลางด้านบน
            padding: [20, 0, 0, 0]  # เพิ่ม padding ด้านซ้าย 10 หน่วย
            Label:
                text: 'Goal Planner'
                halign:'left'
                valign:'middle'
                text_size: self.size
                color: 0, 0, 0, 1
                bold: True
                font_name:'font/name.ttf'
                font_size:'30sp'

                
        BoxLayout: #goal
            orientation: 'vertical'
            size_hint: 1, 0.15  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # อยู่ตรงกลาง
            padding:[50,0,0,0]
            BoxLayout:
                padding:[50,5,640,5]
                Label:
                    text: 'Goal'
                    halign:'center'
                    valign:'middle'
                    text_size: self.size               
                    color: 0, 0, 0, 1
                    bold: True
                    font_name:'font/name.ttf'
                    font_size:'24sp'
                    canvas.before:
                        Color:
                            rgb: 1, 0.843, 0 
                        RoundedRectangle:
                            pos: self.pos
                            size: self.texture_size
                            radius: [10,]
            BoxLayout:
                padding:[50,0,0,0]
                orientation: 'vertical'
                size_hint: 1,1
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1  # สีเทา (RGBA)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                BoxLayout:                    
                    size_hint: 1, None
                    height: 40
                    Label:
                        padding:[50,0,0,0] 
                        text: 'Short term:'
                        size_hint: 0.4, 1
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                    TextInput:
                        id: Shortterm_goal
                        hint_text: 'Enter your Short-term goal here'
                        multiline: False
                    CheckBox:
                        id: Shortterm_goal
                        size_hint: 0.7, 1
                BoxLayout:
                    size_hint: 1, None
                    height: 40
                    Label:
                        padding:[50,0,0,0] 
                        text: 'Long-term:'
                        size_hint: 0.4, 1
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                    TextInput:
                        id: Longterm_goal
                        hint_text: 'Enter your Long-term goal here'
                        multiline: False
                    CheckBox:
                        id: Longterm_goal
                        size_hint: 0.7, 1

        BoxLayout: #activity
            id: activity
            orientation: 'vertical'
            size_hint: 1, 0.3  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # อยู่ตรงกลาง
            padding:[50,0,0,0]
            Label:
                text: 'Activity'
                halign:'left'
                valign:'top'
                text_size: self.size
            ScrollView:
                id: activity
                size_hint: 1, 0.7  # ขนาดตามแนวตั้ง 70% ของหน้าจอ
                BoxLayout:
                    id: activity_layout
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3  # ขนาดตามแนวตั้ง 30% ของหน้าจอ
                height: 40
                TextInput:
                    id: date_input
                    hint_text: 'Enter date (YYYY-MM-DD)'
                    multiline: False
                    size_hint: 0.3, 1
                TextInput:
                    id: time_input
                    hint_text: 'Enter time (HH:MM)'
                    multiline: False
                    size_hint: 0.2, 1
                TextInput:
                    id: activity_input
                    hint_text: 'Enter your activity'
                    multiline: False
                    size_hint: 0.3, 1
                Button:
                    text: 'Add activity'
                    size_hint: 0.2, 1
                    on_press: app.add_activity(activity_input.text, date_input.text, time_input.text)