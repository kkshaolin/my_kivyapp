<Appnote>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: #name
            orientation: 'vertical'
            size_hint: 1, 0.05  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}  # อยู่ตรงกลางด้านบน
            padding: [20, 0, 0, 0]  # เพิ่ม padding ด้านซ้าย 10 หน่วย
            Label:
                text: 'GoalPlanner'
                halign:'left'
                valign:'middle'
                text_size: self.size
        BoxLayout: #goal
            orientation: 'vertical'
            size_hint: 1, 0.3  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # อยู่ตรงกลาง
            padding:[50,0,0,0]
            Label:
                text: 'Goal'
                halign:'left'
                valign:'top'
                text_size: self.size
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 40
                Label:
                    text: 'Short-term goal:'
                    size_hint: 0.3, 1
                    halign: 'left'
                    valign: 'top'
                    text_size: self.size
                TextInput:
                    id: Shortterm_goal
                    text: 'Enter your Short-term goal here'
                    multiline: False
                    size_hint: 0.7, 1
                CheckBox:
                    id: Shortterm_goal
                    size_hint: 0.7, 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 40
                Label:
                    text: 'Long-term goal:'
                    size_hint: 0.3, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                TextInput:
                    id: Longterm_goal
                    text: 'Enter your Long-term goal here'
                    multiline: False
                    size_hint: 0.7, 1
                CheckBox:
                    id: Longterm_goal
                    size_hint: 0.7, 1

        BoxLayout: #activity
            id: activity
            orientation: 'vertical'
            size_hint: 1, 0.3  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # อยู่ตรงกลาง
            padding:[50,0,0,0]
            Label:
                text: 'Activity'
                halign:'left'
                valign:'top'
                text_size: self.size
            BoxLayout:
                id: activity_layout
                orientation: 'vertical'
                size_hint: 1, 0.7  # ขนาดตามแนวตั้ง 90% ของหน้าจอ 
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3  # ขนาดตามแนวตั้ง 10% ของหน้าจอ
                height: 40
                TextInput:
                    id: activity_input
                    text: 'Enter your activity'
                    multiline: False
                    size_hint: 0.7, 1
                Button:
                    text: 'Add activity'
                    size_hint: 0.3, 1
                    on_press: app.add_activity(activity_input.text)