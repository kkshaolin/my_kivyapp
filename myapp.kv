<Appnote>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.05  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}  # อยู่ตรงกลางด้านบน
            canvas.before:
                Color:
                    rgb: 1, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'name'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.3  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # อยู่ตรงกลาง
            canvas.before:
                Color:
                    rgb: 0, 1, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'goal'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.5  # ปรับขนาดตามหน้าจอ
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}  # อยู่ตรงกลางด้านล่าง
            canvas.before:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'activity'